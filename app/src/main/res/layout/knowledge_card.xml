<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_gravity="fill"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:background="@color/colorPrimaryGradient"
    android:clipChildren="true"
    android:elevation="2dp"
    android:focusable="true"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/not_so_rounded_corners">

        <TextView
            android:id="@+id/text_view_in_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:background="@color/transparent"
            android:drawableTint="@color/colorAccent"
            android:maxHeight="100dp"
            android:paddingLeft="@dimen/activity_horizontal_marginby2"
            android:text="TextView"
            android:textAlignment="gravity"
            android:textColor="@color/textWhite"
            android:textSize="34sp"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/text_view_in_card_placeholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="0dp"
            android:background="@color/transparent"
            android:drawableEnd="@android:drawable/status_bar_item_app_background"
            android:drawableTint="@color/colorAccent"
            android:maxHeight="100dp"
            android:paddingLeft="@dimen/activity_horizontal_marginby2"
            android:text="TextView"
            android:textAlignment="gravity"
            android:textColor="@color/textWhite"
            android:textSize="38sp"
            android:visibility="gone"
            tools:text="@tools:sample/full_names" />


    </RelativeLayout>

</android.support.v7.widget.CardView>
