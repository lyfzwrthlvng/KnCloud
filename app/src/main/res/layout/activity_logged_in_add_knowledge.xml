<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoggedInAddKnowledge"
    android:fitsSystemWindows="true"
    android:id="@+id/cl">

    <EditText
        android:id="@+id/add_tag_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/round_button_radius"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:ems="10"
        android:textAlignment="gravity"
        android:gravity="left"
        android:textSize="@dimen/text_size_1to5_3"
        android:textColor="@color/colorAccent"
        android:inputType="textMultiLine"
        android:backgroundTint="@color/colorAccent"
        android:text="enter text here"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layout_for_button"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/layout_for_button">
    <Button
        android:id="@+id/add_tag_text_button"
        android:layout_width="@dimen/round_button_radius"
        android:layout_height="@dimen/round_button_radius"
        android:foreground="@android:drawable/ic_media_play"
        android:background="#00000000"
        android:foregroundGravity="center"
        android:visibility="gone"
        android:foregroundTint="@color/colorPrimaryDark"
        android:typeface="monospace"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>