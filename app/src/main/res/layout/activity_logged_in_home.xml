<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textWhite"
    tools:context=".LoggedInHome">

    <EditText
        android:id="@+id/text_search_reference"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:alpha="0.8"
        android:background="@drawable/rounded_corners"
        android:imeOptions="actionDone"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/textWhite"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/text_search_reference_tiny"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:alpha="0.8"
        android:background="@drawable/rounded_corners"
        android:imeOptions="actionDone"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/textWhite"
        android:textSize="20sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/style_main_bg"
        android:elevation="-1dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:hint="add a new note"
        android:inputType="textShortMessage"
        android:text="+"
        android:textAlignment="gravity"
        android:textColor="@color/colorPrimaryGradient"
        android:textColorHighlight="@color/colorPrimary"
        android:textSize="120sp"
        android:typeface="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/text_search"
        android:layout_width="match_parent"
        android:layout_height="@dimen/round_button_radius"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@drawable/rounded_corners"
        android:drawableEnd="@android:drawable/ic_menu_search"
        android:drawableTint="@color/textWhite"
        android:elevation="2dp"
        android:imeOptions="normal|actionDone"
        android:text="search"
        android:textAlignment="gravity"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_marginby2"
        android:textColor="@color/textWhite"
        android:textSize="20sp"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_search"
        android:layout_width="@dimen/round_button_radius"
        android:layout_height="@dimen/round_button_radius"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:background="@color/transparent"
        android:minWidth="@dimen/round_button_radius"
        android:minHeight="@dimen/round_button_radius"
        android:elevation="3dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_view_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="8dp"
        android:elevation="3dp"
        android:text="add new note"
        android:textColor="@color/textWhite"
        app:layout_constraintBottom_toTopOf="@+id/button_search"
        app:layout_constraintEnd_toEndOf="@id/add_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.641"
        android:visibility="gone"/>

</android.support.constraint.ConstraintLayout>